@model RahyabIdentity.Controllers.Account.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>  ساخت حساب کاربری</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Security-Policy" content="font-src 'self' data:; img-src 'self' data:; default-src 'self'">

    <link rel="icon" type="image/png" href="~/images/icons/favi.png" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->

    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                <partial name="_ValidationSummary" />

                <form class="login100-form validate-form flex-sb flex-w" method="post" asp-controller="Account" asp-action="Register">
                    <img src="~/images/logo.svg" class="logo" />
                    <br />
                    @*<span class="login100-form-title p-b-53">
                            ورود
                        </span>*@
                    <span class="login100-form-title p-b-53" style="font-size: 3rem;">
                        ساخت حساب کاربری جدید
                    </span>
                    <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
                    @*External login*@
                    @*@foreach (var provider in Model.VisibleExternalProviders)
                        {
                            if (provider.DisplayName == "Yahoo")
                            {
                                <a class="btn-face m-b-20" asp-controller="External"
                                   asp-action="Challenge"
                                   asp-route-provider="@provider.AuthenticationScheme"
                                   asp-route-returnUrl="@Model.ReturnUrl">
                                    <i class="fa fa-yahoo"></i>
                                    Yahoo
                                </a>
                            }
                            else if (provider.DisplayName == "Google")
                            {
                                <a class="btn-google m-b-20" asp-controller="External"
                                   asp-action="Challenge"
                                   asp-route-provider="@provider.AuthenticationScheme"
                                   asp-route-returnUrl="@Model.ReturnUrl">
                                    <img src="~/images/icons/icon-google.png" alt="GOOGLE">
                                    Google
                                </a>
                            }
                        }*@

                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            نــام
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="لطفاً نام خود را وارد نمایید">
                        <i class="fa fa-user icon"></i>
                        <input class="input100" type="text" autofocus="" asp-for="FirstName">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            نام خانوادگی
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="لطفاً نام خانوادگی خود را وارد نمایید">
                        <i class="fa fa-user icon"></i>
                        <input class="input100" type="text" asp-for="LastName">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            تلفن همراه
                        </span>


                    </div>
                    <div class="wrap-input100 validate-input" data-validate="لطفاً تلفن خود را وارد نمایید">
                        <i class="fa fa-phone icon"></i>
                        <input class="input100" type="tel" asp-for="PhoneNumber" placeholder="مثال:0912xxxxx25">
                        <span class="focus-input100"></span>
                    </div>

                    @*<div class="p-t-13 p-b-9">
                            <span class="txt1">
                                پست الکترونیک
                            </span>


                        </div>*@
                    @*<div class="wrap-input100 validate-input" data-validate="لطفاً ایمیل خود را وارد نمایید">
                            <input class="input100" type="email" asp-for="Email">
                            <span class="focus-input100"></span>
                        </div>*@

                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            رمز عبور
                        </span>


                    </div>
                    <div class="wrap-input100 validate-input" data-validate="لطفاً رمز عبور را وارد نمایید">
                        <i class="fa fa-lock icon"></i>
                        <input class="input100" type="password" asp-for="Password">
                        <span class="focus-input100"></span>
                    </div>


                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn" type="submit">
                            ثبت نـام
                        </button>
                    </div>

                </form>
                <div class="w-full text-center p-t-55">
                    <span class="txt2">
                        حساب کاربری دارید؟
                    </span>

                    <a asp-controller="Account"
                       asp-action="Login"
                       asp-route-returnUrl="@Model.ReturnUrl" class="txt2 bo1">
                        وارد حساب خود شوید
                    </a>
                </div>
            </div>
        </div>

    </div>

    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->

    <script src="~/js/main.js"></script>

</body>
</html>

