@model RahyabIdentity.Controllers.Account.ChangePasswordRequestViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>تغییر کلمه عبور</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Security-Policy" content="font-src 'self' data:; img-src 'self' data:;style-src 'self' ; default-src 'self'">

    <!--===============================================================================================-->
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--===============================================================================================-->
    <link href="~/css/changepassword.css" rel="stylesheet" />
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                <partial name="_ValidationSummary" />

                <img src="~/images/logo.svg" class="logo" />
                <br />
                <h3 class="text-center p-b-53">
                    شماره موبایل خود را وارد کنید
                </h3>
                <br />
                <form asp-action="ChangePasswordRequest">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100 inp-phone-number" autofocus required=""  type="text" asp-for="PhoneNumber">
                        <span class="focus-input100"></span>
                    </div>
                    <input asp-for="ReturnUrl" class="form-control" type="hidden" />

                    <div class="container-login100-form-btn m-t-17">
                        <button type="submit" class="login100-form-btn" name="button">
                            تغییر کلمه عبور
                        </button>
                    </div>
                </form>

            </div>
        </div>

    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/bootstrap/js/popper.min.js"></script>

    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/site.js"></script>
   
</body>
</html>
