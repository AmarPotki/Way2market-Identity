@model RahyabIdentity.Controllers.Account.ChangePasswordRequestViewModel

@{
    ViewData["Title"] = "ChangePasswordRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ChangePasswordRequest</h1>

<h4>ChangePasswordRequestViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePasswordRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <input asp-for="ReturnUrl" class="form-control" type="hidden" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
